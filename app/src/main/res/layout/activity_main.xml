<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/backgroundcolor"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/GetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:fontFamily="serif"
        android:text="Get Started"
        android:textColor="#032152"
        android:layout_marginTop="20dp"
        android:textSize="55dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signupOrLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="65dp"
        android:fontFamily="serif"
        android:gravity="left"
        android:layout_marginBottom="20dp"
        android:text="Start with sign up or log in"
        android:textColor="#032152"
        android:textSize="19dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="452dp"
        android:layout_height="316dp"
        app:srcCompat="@drawable/girllaptop3"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/buttonGoToSignUp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#E4B9AF"
        android:fontFamily="serif"

        android:text="Sign up"
        android:textSize="18dp" />

    <Button
        android:id="@+id/buttonGoToLogin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Login"
        android:backgroundTint="#E4B9AF"
        android:textSize="18dp" />




</LinearLayout>