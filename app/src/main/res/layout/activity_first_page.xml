<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor"
    android:gravity="center"
    android:orientation="vertical"

    tools:context=".FirstPageActivity">



    <TextView
        android:id="@+id/GetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="Welcome,"
        android:textColor="#032152"
        android:textSize="45dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="18dp"
        android:fontFamily="serif"
        android:text="Name"
        android:textColor="#032152"
        android:textSize="40dp"
        android:textStyle="bold"
/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="449dp"
        app:srcCompat="@drawable/welcomeuser3" />

    <TextView
        android:id="@+id/control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:layout_marginRight="35dp"
        android:text="Are you ready to"
        android:textColor="#032152"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/control2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="serif"
        android:layout_marginRight="5dp"
        android:text="to build some habits?"
        android:textColor="#032152"
        android:textSize="35dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/LetsDoIt"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#E4B9AF"
        android:drawablePadding="2dp"
        android:fontFamily="serif"
        android:padding="9dp"
        android:text="Lets do it!"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"/>

</LinearLayout>